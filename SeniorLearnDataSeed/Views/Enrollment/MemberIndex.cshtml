@model SeniorLearnDataSeed.Models.Enrollments.AdminEnrollIndexViewModel
<h1 class="page-title">Enrollments</h1>

<!-- Standalone Sessions Table -->
<h2 class="section-title">Standalone Sessions</h2>
<table class="enrollment-table">
    <thead>
        <tr>
            <th>Session ID</th>
            <th>Course Name</th>
            <th>User</th>
            <th>Enrollment Date</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var enrollment in Model.StandaloneEnrollments)
        {
            <tr>
                <td>@enrollment.SessionId</td>
                <td>@enrollment.CourseName</td>
                <td>@enrollment.UserName</td>
                <td>@enrollment.EnrolledDate.ToShortDateString()</td>
                <td class="action-cell">
                    <button type="button"
                onclick="location.href='@Url.Action("EnrollDetails", "Course", new { id = enrollment.CourseId })'"
                class="btn btn-primary">
                Course Details
                </button>
                </td>
            </tr>
        }
    </tbody>
</table>

<!-- Recurring Sessions Table -->
<h2 class="section-title">Recurring Sessions</h2>
<table class="enrollment-table">
    <thead>
        <tr>
            <th>Session ID</th>
            <th>Course Name</th>
            <th>User</th>
            <th>Enrollment Date</th>
            <th>Link</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var enrollment in Model.RecurringEnrollments)
        {
            <tr>
                <td>@enrollment.SessionId</td>
                <td>@enrollment.CourseName</td>
                <td>@enrollment.UserName</td>
                <td>@enrollment.EnrolledDate.ToShortDateString()</td>
                <td>@enrollment.</td>
                <td class="action-cell">
                      <button type="button"
                onclick="location.href='@Url.Action("EnrollDetailsContinuous", "Course", new { id = enrollment.CourseId })'"
                class="btn btn-primary">
                Course Details
                </button>
                </td>
            </tr>
        }
    </tbody>
</table>

<!-- Back to the list button -->


<!-- Clean Styling -->
<style>
    /* General styling */
    body {
        font-family: Arial, sans-serif;
        margin: 0;
        padding: 0;
    }

    .page-title {
        text-align: center;
        font-size: 24px;
        color: #333;
        margin-top: 20px;
    }

    .section-title {
        text-align: center;
        color: #4CAF50;
        font-size: 20px;
        margin-top: 30px;
        margin-bottom: 15px;
    }

    .enrollment-table {
        width: 100%;
        border-collapse: collapse;
        margin-bottom: 40px;
    }

        .enrollment-table th,
        .enrollment-table td {
            padding: 12px;
            text-align: left;
            border: 1px solid #ddd;
        }

        .enrollment-table th {
            background-color: #f4f4f4;
            font-weight: bold;
        }

        .enrollment-table tr:nth-child(even) {
            background-color: #fafafa;
        }

        .enrollment-table tr:hover {
