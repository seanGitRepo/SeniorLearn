@model SeniorLearnDataSeed.Models.Payment.AdminIndexView

<h1>Payment Administration</h1>

<h2>Expired Registrations</h2>
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Payment Id</th>
            <th>Name</th>
            <th>Phone Number</th>
            <th>Payment Type</th>
            <th>Payment Status</th>
            <th>Amount Paid</th>
            <th>ApplicationUserId</th>
            <th>Registration Date</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var obj in Model.expriedRegistration)
        {
            <tr>
                <td>@obj.PaymentId</td>
                <td>@obj.User.FirstName @obj.User.LastName</td>
                <td>@obj.User.PhoneNumber</td>
                <td>@obj.SelectedPaymentType</td>
                <td>@obj.SelectedPaymentStatus</td>
                <td>@obj.AmountPaid</td>
                <td>@obj.ApplicationUserId</td>
                <td>@obj.userRegistrationDate.ToString("yyyy-MM-dd")</td>
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="Payment" asp-action="Edit" asp-route-paymentId="@obj.PaymentId" class="btn btn-primary mx-2">Edit</a>
                        <a asp-controller="Payment" asp-action="Delete" asp-route-paymentId="@obj.PaymentId" class="btn btn-danger mx-2">Delete</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>


