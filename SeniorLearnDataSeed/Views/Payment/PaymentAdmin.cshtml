@model IEnumerable<SeniorLearnDataSeed.Data.Core.Payment>

<h1>Payment List</h1>
<table class="table table-bordered table-striped">
    <thread>
        <tr>
            <th>
                Payment Id
            </th>
            <th>
                Payment Type
            </th>
            <th>
                Payment Status
            </th>
            <th>
                Amount Paid
            </th>
            <th>
                ApplicationUserId
            </th>
            <th>
                Registration Date
            </th>
        </tr>
    </thread>
    <tbody>
        @foreach (var obj in Model)
        {
            <tr>
                <td>@obj.PaymentId</td>
                <td>@obj.PaymentType</td>
                <td>@obj.PaymentStatus</td>
                <td>@obj.AmountPaid</td>
                <td>@obj.ApplicationUserId</td>
                <td>@obj.userRegistrationDate</td>
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="Payment" asp-action="Edit" asp-route-paymentId="@obj.PaymentId" class="btn btn-primary mx-2">
                            Edit
                        </a>
                        <a asp-controller="Payment" asp-action="Delete" asp-route-paymentId="@obj.PaymentId" class="btn btn-primary mx-2">
                            Delete
                        </a>
                    </div>
                    
                </td>
            </tr>
        }

    </tbody>
</table>

<a asp-controller="Payment" asp-action="Create" class="btn btn-primary">
    Create New Payment
</a>