@model SeniorLearnDataSeed.Models.Course.Edit

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit a Course</h1>

<hr />
<form asp-action="Edit">
<div class="row">
    <div class="col-md-4">
        <div class="course-form-container" style="border: 2px solid #ccc; border-radius: 15px; padding: 40px;">
           
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Description" class="control-label"></label>
                    <textarea asp-for="Description" class="form-control" rows="10" style="resize: none;"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Category" class="control-label"></label>
                    <input asp-for="Category" class="form-control" />
                    <span asp-validation-for="Category" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="SelectedDifficulty" class="form-label">Difficulty</label>
                    <select asp-for="SelectedDifficulty" class="form-select" asp-items="@Model.CourseDifficulty">
                        <option value="">Select Difficulty</option>
                    </select>
                </div>

                <div class="form-group form-check" style="margin-bottom: 20px;">
                    <label class="form-check-label">
                        <input class="form-check-input" asp-for="isStandAlone" /> @Html.DisplayNameFor(model => model.isStandAlone)
                    </label>
                </div>
                
                <input type="hidden" asp-for="CourseId" />
            
        </div>
        
    </div>
</div>

<div class="form-group" style="margin-top:30px; display: flex; gap: 10px">
    <input type="submit" value="Save" class="btn btn-primary" />
    <a asp-controller="Course" asp-action="MyCourses">
        <button type="submit" class="btn text-danger">Back To My Courses</button>
    </a>
</div>
</form>


