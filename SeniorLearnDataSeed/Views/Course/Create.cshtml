    .step {
        display: flex;
        align-items: center;
        margin-bottom: 20px;
        justify-content: center;
    }

    /* Circle styling for the numbers */
    .circle {
        width: 40px;
        height: 40px;
        border-radius: 50%;
        border: 2px solid #ccc
        color: #007bff ;
        display: flex;
        justify-content: center;
        align-items: center;
        font-size: 1.5rem;
        font-weight: bold;
        margin-right: 15px; 
        background-color: transparent;
    }

    .filled{
        background-color: #f4978e;
        color: white;
        border: none;
    }

    /* Style for text next to the circle */
    .step p {
        margin: 0;
        font-size: 1.1rem;
        flex-grow: 1;
        text-align: left;
    }
    .custom-checkbox{
        width: 24px;
        height: 24px;
